{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run vercel-build",
  "routes": [
    {
      "src": "/(advanced-humanizer\\.js|script\\.js|styles\\.css|ai-detection-tester\\.js)",
      "headers": {
        "cache-control": "no-store, no-cache, must-revalidate, proxy-revalidate",
        "pragma": "no-cache",
        "expires": "0"
      },
      "continue": true
    },
    {
      "src": "/(video\\.mp4|.*\\.png|.*\\.jpg|.*\\.svg)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/api/(.*)",
      "dest": "server/index.js",
      "headers": {
        "cache-control": "no-store, no-cache, must-revalidate, proxy-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "server/index.js",
      "headers": {
        "cache-control": "no-store, no-cache, must-revalidate, proxy-revalidate",
        "pragma": "no-cache",
        "expires": "0"
      }
    }
  ]
}
